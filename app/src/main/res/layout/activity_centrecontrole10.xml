<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.Activity_controlcenter"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bleu">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/retourcent"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:src="@drawable/retour" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:title="@string/controle"
                app:titleTextColor="@color/white" />
            <ImageView
                android:id="@+id/voicecc"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_260sdp"
                android:src="@drawable/voice" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/agenda"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/agenda"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/agenda"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/gmail"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/GMAIL"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/camera"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/camera"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/contact"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/contact"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/horloge"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/horloge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/hor"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/telephone"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/telephone"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/message"

            />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:checked="true"
            android:text="@string/msg"
            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/maps"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/map"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/photos"

            />
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:checked="true"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="@string/photo"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_10sdp"
            android:thumb="@drawable/thum"
            app:track="@drawable/trak"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>